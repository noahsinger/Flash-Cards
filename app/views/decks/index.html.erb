<p><%= notice %></p>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @decks.each do |deck| %>
  <tr>
    <td><%= deck.name %></td>
    <td><%= link_to 'Show', deck_cards_path(deck) %></td>
    <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
    <td><%= link_to 'Destroy', deck, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

